<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.riis"
      android:versionCode="1"
      android:versionName="1.0">
      
    <uses-sdk 
        android:minSdkVersion="16"
        android:targetSdkVersion="19"/>
    
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application android:label="@string/app_name" 
        android:icon="@drawable/ic_launcher"
        android:allowBackup="false"
        android:name="com.riis.dagger.DaggerApplication" 
        android:theme="@android:style/Theme.Holo">
        <activity android:name="DisasterAppActivity"
            android:label="@string/home_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="NewContactActivity"
            android:label="@string/create_contact_title">
        </activity>
        <activity android:name="SendEmergencyMessageActivity"
            android:label="@string/send_emergency_message_title">
        </activity>
        <activity android:name="ViewResponseMessagesActivity"
			android:label="@string/view_response_messages_title">
        </activity>
        <activity android:name="CreateContactListsActivity"
            android:label="@string/create_contact_list_title">
        </activity>
        <activity android:name="EditContactListMembersActivity"
            android:label="@string/contact_list_members_title" >
        </activity>
         <activity android:name="ImportContactsActivity"
            	  android:label="@string/import_contacts_title">
        </activity>
         
        <receiver android:name=".controllers.TextMessageReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
