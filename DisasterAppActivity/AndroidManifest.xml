<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.riis"
      android:versionCode="1"
      android:versionName="1.0">
      
    <uses-sdk 
        android:minSdkVersion="11"
        android:targetSdkVersion="19"/>
    
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher"
        android:allowBackup="false"
        android:name="com.riis.dagger.DaggerApplication">
        <activity android:name="DisasterAppActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="NewContactActivity"
            	  android:label="@string/app_name">
        </activity>
        <activity android:name="SendEmergencyMessageActivity"
            	  android:label="@string/app_name">
        </activity>
        <activity android:name="ViewResponseMessagesActivity"
            	  android:label="@string/app_name">
        </activity>
        <receiver android:name=".controllers.TextMessageReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
