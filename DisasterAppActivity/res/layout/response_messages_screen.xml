<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/returnToMainScreenButton"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:onClick="returnToMainScreen"
        android:text="@string/returnToMainScreenButtonLabel"
        android:background="@drawable/button_medium"/>
    
	<ListView
	    android:id="@+id/responseMessagesListView"
	    android:layout_above="@id/returnToMainScreenButton"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:dividerHeight="2dp" />
	
</RelativeLayout>
