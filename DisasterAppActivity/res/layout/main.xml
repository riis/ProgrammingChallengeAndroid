<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ListView
        android:id="@+id/contactListDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_centerHorizontal="true"
        android:dividerHeight="2dp" 
        android:layout_above="@id/buttonRow"
        />
    
    <LinearLayout
        android:id="@+id/buttonRow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"  
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:orientation="horizontal" >

	<Button
			android:id="@+id/createContactButton"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:onClick="createContact" 
			android:layout_weight="1"
			
			android:layout_margin="8dp"
			android:gravity="left|center"
			android:background="@drawable/add_contact_nine"
			
			
			/>
	
		<Button
			android:id="@+id/createContactListButton"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:onClick="createContactList" 
			android:layout_weight="1"
			android:background="@drawable/add_list_nine"
			android:layout_margin="8dp"
			android:gravity="center_horizontal|center"
			/>
		
		<Button
			android:id="@+id/importCntactsButton"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:onClick="importContacts"
			android:layout_weight="1"
			android:background="@drawable/import_contacts_nine"
			android:layout_margin="8dp"
			android:gravity="right|center"
			/>
		
		<Button
			android:id="@+id/viewResponseMessageButton"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:onClick="viewResponseMessages" 
			android:layout_weight="1"
			android:background="@drawable/read_messages_nine"
			android:layout_margin="8dp"
			android:gravity="center_horizontal|center"
			/>
		 
		
	</LinearLayout>
    
</RelativeLayout>

    
